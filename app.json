{
  "expo": {
    "name": "Tactix",
    "slug": "Tactix",
    "description": "Â© 2025 Christian Lindehammar. All rights reserved.",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tactix",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/images/icon.png",
      "infoPlist": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Tactix Team File",
            "LSItemContentTypes": [
              "public.data"
            ],
            "LSHandlerRank": "Owner"
          },
          {
            "CFBundleTypeName": "Tactix Team File",
            "LSItemContentTypes": [
              "public.data"
            ],
            "LSHandlerRank": "Owner"
          }
        ]
      },
      "bundleIdentifier": "com.lhconsult.tactix"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.lhconsult.tactix",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "mimeType": "application/x-tactix",
              "path": "*.tactix"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
